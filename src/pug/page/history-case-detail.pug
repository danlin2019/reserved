- var list = "files/img/case/2000x670.jpg"
doctype html
html(lang="zh-tw")
  head
    link(rel="stylesheet", href="files/css/source/jquery.fancybox.css?v=2.1.5" media="screen")
    link(rel="stylesheet", href="files/css/source/helpers/jquery.fancybox-thumbs.css?v=1.0.7")
    link(rel="stylesheet", href="files/css/source/helpers/jquery.fancybox-buttons.css?v=1.0.5")
    include ../components/head.pug

  body
    div#wrapper.history-case-detail-page
      include ../components/header.pug
      main(role="main")
        //- banner
        .main-banner
          img(src="files/img/case/2000x670.jpg")
        //- path
        .path
          .path-box
            a(href="index.html") 首頁 
            | 歷年建案
        //- 左邊選單
        .main-content
          .left-nav
            .nav-title.mo-use
              | 歷年建案
            // 這塊只有行動裝置才會出現 選擇 .item_nav li 裡面的文字會印到 .item_title 這個容器裡面
            .item_title 所有年度  
            .item_nav
              ul
                li.active
                  a(href="#") 所有年度 
                li
                  a(href="#") 2019 
                li
                  a(href="#") 2018 
                li
                  a(href="#") 2017 
                li
                  a(href="#") 2016 
          //- 右邊區塊
          .right-content
            .title-box.pc-use
              h2 歷年建案
              h3 HISTORY CASE
            //- 功能
            include ../section/hot_case/case-slick.pug
            //- 底下內容
            .hot-case-detail-content
              h2 建案規畫
              .editor-box
                img(src="files/img/case/detail.jpg")

                    
      //- footer
      include ../components/footer.pug
    script(src='files/js/vendors.js')
    script(src='files/js/index.js?v=' + d)

